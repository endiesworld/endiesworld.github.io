---
import BaseLayout from '../../layouts/BaseLayout.astro';
import PostCard from '../../components/PostCard.astro';
import { getAllPosts, getUniqueCategories, getCategoryLabel } from '../../utils/posts';

const posts = await getAllPosts();
const categories = getUniqueCategories(posts);
---

<BaseLayout
  title="Blog | Engineering Blog"
  description="All blog posts about software engineering, DevOps, AI, and projects"
>
  <section class="max-w-4xl mx-auto px-4 py-12">
    <h1 class="text-3xl md:text-4xl font-bold text-[var(--text-primary)] mb-4">
      All Posts
    </h1>
    <p class="text-lg text-[var(--text-secondary)] mb-8">
      {posts.length} article{posts.length !== 1 ? 's' : ''} about software engineering, DevOps, AI, and more.
    </p>

    <!-- Category Filter -->
    <div class="flex flex-wrap gap-2 mb-8">
      <a
        href="/blog"
        class="px-4 py-2 rounded-full bg-[var(--color-primary)] text-white text-sm font-medium"
      >
        All
      </a>
      {categories.map((cat) => (
        <a
          href={`/blog/${cat}`}
          class="px-4 py-2 rounded-full bg-[var(--bg-secondary)] text-[var(--text-secondary)] text-sm font-medium hover:bg-[var(--bg-tertiary)] transition-colors"
        >
          {getCategoryLabel(cat)}
        </a>
      ))}
    </div>

    <!-- Posts Grid -->
    {posts.length > 0 ? (
      <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
        {posts.map((post) => (
          <PostCard
            title={post.data.title}
            description={post.data.description}
            pubDate={post.data.pubDate}
            category={post.data.category}
            tags={post.data.tags}
            href={`/blog/${post.slug}`}
            heroImage={post.data.heroImage}
          />
        ))}
      </div>
    ) : (
      <p class="text-[var(--text-muted)] text-center py-12">
        No posts yet. Check back soon!
      </p>
    )}
  </section>
</BaseLayout>
