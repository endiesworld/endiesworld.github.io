---
import BaseLayout from '../layouts/BaseLayout.astro';
import PostCard from '../components/PostCard.astro';
import { getAllPosts } from '../utils/posts';

const posts = await getAllPosts();
const recentPosts = posts.slice(0, 6);

const categories = [
  { slug: 'software-engineering', label: 'Software Engineering', description: 'Deep dives into programming, architecture, and best practices' },
  { slug: 'devops', label: 'DevOps', description: 'CI/CD, infrastructure, containers, and deployment' },
  { slug: 'ai', label: 'AI & ML', description: 'Machine learning, LLMs, and artificial intelligence' },
  { slug: 'projects', label: 'Projects', description: 'Personal projects and open source contributions' },
];
---

<BaseLayout
  title="Engineering Blog"
  description="Technical articles about software engineering, DevOps, AI, and personal projects"
>
  <!-- Hero Section -->
  <section class="max-w-4xl mx-auto px-4 py-16">
    <h1 class="text-4xl md:text-5xl font-bold text-[var(--text-primary)] mb-4">
      Engineering Blog
    </h1>
    <p class="text-xl text-[var(--text-secondary)] max-w-2xl">
      Technical articles about software engineering, DevOps, artificial intelligence, and personal projects.
    </p>
  </section>

  <!-- Categories Section -->
  <section class="max-w-4xl mx-auto px-4 py-8">
    <h2 class="text-2xl font-bold text-[var(--text-primary)] mb-6">Categories</h2>
    <div class="grid grid-cols-1 sm:grid-cols-2 gap-4">
      {categories.map((cat) => (
        <a
          href={`/blog/${cat.slug}`}
          class="p-4 rounded-lg bg-[var(--bg-secondary)] border border-[var(--border-color)] hover:border-[var(--color-primary)] transition-colors group"
        >
          <h3 class="font-semibold text-[var(--text-primary)] group-hover:text-[var(--color-primary)] transition-colors mb-1">
            {cat.label}
          </h3>
          <p class="text-sm text-[var(--text-secondary)]">{cat.description}</p>
        </a>
      ))}
    </div>
  </section>

  <!-- Recent Posts Section -->
  <section class="max-w-4xl mx-auto px-4 py-8">
    <div class="flex items-center justify-between mb-6">
      <h2 class="text-2xl font-bold text-[var(--text-primary)]">Recent Posts</h2>
      <a
        href="/blog"
        class="text-sm font-medium text-[var(--color-primary)] hover:underline"
      >
        View all posts &rarr;
      </a>
    </div>

    {recentPosts.length > 0 ? (
      <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
        {recentPosts.map((post) => (
          <PostCard
            title={post.data.title}
            description={post.data.description}
            pubDate={post.data.pubDate}
            category={post.data.category}
            tags={post.data.tags}
            href={`/blog/${post.slug}`}
            heroImage={post.data.heroImage}
          />
        ))}
      </div>
    ) : (
      <p class="text-[var(--text-muted)] text-center py-8">
        No posts yet. Check back soon!
      </p>
    )}
  </section>
</BaseLayout>
