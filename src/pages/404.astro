---
import BaseLayout from '../layouts/BaseLayout.astro';

const base = import.meta.env.BASE_URL;
---

<BaseLayout
  title="Page Not Found | Engineering Blog"
  description="The page you're looking for doesn't exist"
>
  <section class="max-w-4xl mx-auto px-4 py-24 text-center">
    <h1 class="text-6xl font-bold text-[var(--text-primary)] mb-4">404</h1>
    <p class="text-xl text-[var(--text-secondary)] mb-8">
      Oops! The page you're looking for doesn't exist.
    </p>
    <a
      href={base}
      class="inline-flex items-center gap-2 px-6 py-3 rounded-lg bg-[var(--color-primary)] text-white font-medium hover:bg-[var(--color-primary-dark)] transition-colors"
    >
      <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18" />
      </svg>
      Go back home
    </a>
  </section>
</BaseLayout>
