---
interface Heading {
  depth: number;
  slug: string;
  text: string;
}

interface Props {
  headings: Heading[];
}

const { headings } = Astro.props;

const filteredHeadings = headings.filter((h) => h.depth >= 2 && h.depth <= 3);
---

{filteredHeadings.length > 0 && (
  <nav class="toc p-4 rounded-lg bg-[var(--bg-secondary)] border border-[var(--border-color)]">
    <h2 class="text-sm font-semibold text-[var(--text-primary)] mb-3">Table of Contents</h2>
    <ul class="space-y-2">
      {filteredHeadings.map((heading) => (
        <li class:list={[heading.depth === 3 && 'ml-4']}>
          <a
            href={`#${heading.slug}`}
            class="text-sm text-[var(--text-secondary)] hover:text-[var(--color-primary)] transition-colors"
          >
            {heading.text}
          </a>
        </li>
      ))}
    </ul>
  </nav>
)}
